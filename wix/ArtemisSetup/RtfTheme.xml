<Theme xmlns="http://wixtoolset.org/schemas/v4/thmutil">
    <Font Id="0" Height="-12" Weight="500" Foreground="windowtext" Background="window">Segoe UI</Font>
    <Font Id="1" Height="-24" Weight="500" Foreground="windowtext">Segoe UI</Font>
    <Font Id="2" Height="-22" Weight="500" Foreground="graytext">Segoe UI</Font>
    <Font Id="3" Height="-12" Weight="500" Foreground="windowtext" Background="window">Segoe UI</Font>

    <Window Width="485" Height="300" HexStyle="100a0000" FontId="0" Caption="#(loc.Caption)" IconFile="artemis.ico">
        <ImageControl X="11" Y="11" Width="64" Height="64" ImageFile="logo.png" Visible="yes"/>
        <Label X="80" Y="11" Width="-11" Height="64" FontId="1" Visible="yes" DisablePrefix="yes">#(loc.Title)</Label>

        <Page Name="Help">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.HelpHeader)</Label>
            <Label X="11" Y="112" Width="-11" Height="-35" FontId="3" DisablePrefix="yes">#(loc.HelpText)</Label>
            <Button Name="HelpCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.HelpCancelButton)</Button>
        </Page>
        <Page Name="Loading">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.LoadingHeader)</Label>
            <Label X="11" Y="121" Width="-11" Height="23" FontId="3" DisablePrefix="yes">#(loc.LoadingMessage)</Label>
            <Progressbar Name="LoadingProgressbar" X="11" Y="143" Width="-11" Height="15" />
            <Button Name="LoadingCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.LoadingCancelButton)</Button>
        </Page>
        <Page Name="Options">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.OptionsHeader)</Label>
            <Checkbox Name="EulaAcceptCheckbox" X="11" Y="121" Width="-11" Height="17" TabStop="yes" FontId="3">#(loc.OptionsEulaAcceptCheckbox)</Checkbox>
            <Button Name="OptionsInstallButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.OptionsInstallButton)</Button>
            <Button Name="OptionsUpgradeButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.OptionsUpgradeButton)</Button>
            <Button Name="OptionsUninstallButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.OptionsUninstallButton)</Button>
            <Button Name="OptionsRepairButton" X="-91" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.OptionsRepairButton)</Button>
            <Button Name="OptionsCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.OptionsCancelButton)</Button>
        </Page>
        <Page Name="FilesInUse">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.FilesInUseHeader)</Label>
            <Label X="11" Y="112" Width="-11" Height="34" FontId="3" DisablePrefix="yes">#(loc.FilesInUseMessage)</Label>
            <Listbox Name="FilesInUseList" X="11" Y="148" Width="-11" Height="82" TabStop="yes" FontId="3" />
            <Button Name="FilesInUseOkButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.FilesInUseOkButton)</Button>
            <Button Name="FilesInUseCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.FilesInUseCancelButton)</Button>
        </Page>
        <Page Name="Progress">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">
                <Text>#(loc.ProgressHeader)</Text>
                <Text Condition="WixBundleAction = 2">#(loc.ProgressLayoutHeader)</Text>
                <Text Condition="WixBundleAction = 3">#(loc.ProgressUnsafeUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 4">#(loc.ProgressUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 5">#(loc.ProgressCacheHeader)</Text>
                <Text Condition="WixBundleAction = 6">#(loc.ProgressInstallHeader)</Text>
                <Text Condition="WixBundleAction = 7">#(loc.ProgressModifyHeader)</Text>
                <Text Condition="WixBundleAction = 8">#(loc.ProgressRepairHeader)</Text>
            </Label>
            <Label Name="OverallProgressPackageText" X="11" Y="121" Width="-11" Height="17" FontId="3" DisablePrefix="yes">#(loc.ProgressMessage)</Label>
            <Progressbar Name="OverallProgressbar" X="11" Y="143" Width="-11" Height="15" />
            <Button Name="ProgressCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.ProgressCancelButton)</Button>
        </Page>
        <Page Name="Success">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">
                <Text>#(loc.SuccessHeader)</Text>
                <Text Condition="WixBundleAction = 2">#(loc.SuccessLayoutHeader)</Text>
                <Text Condition="WixBundleAction = 3">#(loc.SuccessUnsafeUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 4">#(loc.SuccessUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 5">#(loc.SuccessCacheHeader)</Text>
                <Text Condition="WixBundleAction = 6">#(loc.SuccessInstallHeader)</Text>
                <Text Condition="WixBundleAction = 7">#(loc.SuccessModifyHeader)</Text>
                <Text Condition="WixBundleAction = 8">#(loc.SuccessRepairHeader)</Text>
            </Label>
            <Button Name="LaunchButton" X="-91" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessLaunchButton)</Button>
            <Label X="-11" Y="-51" Width="400" Height="34" FontId="3" DisablePrefix="yes" VisibleCondition="WixStdBARestartRequired">
                <Text>#(loc.SuccessRestartText)</Text>
                <Text Condition="WixBundleAction = 3">#(loc.SuccessUninstallRestartText)</Text>
            </Label>
            <Button Name="SuccessRestartButton" X="-91" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessRestartButton)</Button>
            <Button Name="SuccessCloseButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">
                <Text>#(loc.SuccessCloseButton)</Text>
                <CloseWindowAction />
            </Button>
        </Page>
        <Page Name="Failure">
            <Label X="11" Y="80" Width="-11" Height="30" FontId="2" DisablePrefix="yes">
                <Text>#(loc.FailureHeader)</Text>
                <Text Condition="WixBundleAction = 2">#(loc.FailureLayoutHeader)</Text>
                <Text Condition="WixBundleAction = 3">#(loc.FailureUnsafeUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 4">#(loc.FailureUninstallHeader)</Text>
                <Text Condition="WixBundleAction = 5">#(loc.FailureCacheHeader)</Text>
                <Text Condition="WixBundleAction = 6">#(loc.FailureInstallHeader)</Text>
                <Text Condition="WixBundleAction = 7">#(loc.FailureModifyHeader)</Text>
                <Text Condition="WixBundleAction = 8">#(loc.FailureRepairHeader)</Text>
            </Label>
            <Hypertext Name="FailureLogFileLink" X="11" Y="121" Width="-11" Height="42" FontId="3" TabStop="yes" HideWhenDisabled="yes">#(loc.FailureHyperlinkLogText)</Hypertext>
            <Hypertext Name="FailureMessageText" X="22" Y="163" Width="-11" Height="51" FontId="3" TabStop="yes" HideWhenDisabled="yes" />
            <Label X="-11" Y="-51" Width="400" Height="34" FontId="3" DisablePrefix="yes" VisibleCondition="WixStdBARestartRequired">#(loc.FailureRestartText)</Label>
            <Button Name="FailureRestartButton" X="-91" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.FailureRestartButton)</Button>
            <Button Name="FailureCloseButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">
                <Text>#(loc.FailureCloseButton)</Text>
                <CloseWindowAction />
            </Button>
        </Page>
    </Window>
</Theme>
